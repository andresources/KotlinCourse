<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KotlinCourse" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>



    <style name="Theme.KotlinCourse" parent="Base.Theme.KotlinCourse" />

    <style name="mytv" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/red</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:background">@color/yellow</item>
    </style>

    <style name="heading" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:background">@color/yellow</item>
        <item name="android:padding">@dimen/txtSize</item>
    </style>

    <style name="title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:background">@color/yellow</item>
        <item name="android:padding">@dimen/txtSize</item>
    </style>

    <style name="Theme.KotlinCourse.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KotlinCourse.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KotlinCourse.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>